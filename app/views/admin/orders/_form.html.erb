<div class="row">
  <%= simple_form_for @order, html: { class: 'form-horizontal' } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <div class="form-group">
          <div class="col-sm-6">
            <%= f.association :meats, collection: Meat.all, as: :check_boxes %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-6">
            <%= f.association :side_dishes, collection: SideDish.all, as: :check_boxes %>
          </div>
        </div>

        <%= f.simple_fields_for :address do |af| %>
          <div class="form-group">
            <%= af.label :street, 'Rua *', class: 'col-sm-2 control-label' %>
            <div class="col-sm-6">
              <%= af.input :street, required: true, label: false %>
            </div>
          </div>

          <div class="form-group">
            <%= af.label :number, 'Número *', class: 'col-sm-2 control-label' %>
            <div class="col-sm-6">
              <%= af.input :number, required: true, label: false %>
            </div>
          </div>

          <div class="form-group">
            <%= af.label :reference, 'Referência', class: 'col-sm-2 control-label' %>
            <div class="col-sm-6">
              <%= af.input :reference, required: false, label: false %>
            </div>
          </div>
        <% end %>
    </div>

    <div class="form-actions">
      <div class="form-group text-center">
        <%= f.button :submit, button_label, class: 'btn btn-flat inverse' %>
      </div>
    </div>
  <% end %>
</div>
