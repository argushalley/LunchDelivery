<table class="table table-striped">
  <thead>
    <th>#</th>
    <th>Carnes</th>
    <th>Acompanhamentos</th>
    <th>Endereço</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.id %></td>
      <td>
        <% @order.meats.each do |meat| %>
          <ul class="list-unstyled">
            <li><%= meat.name %></li>
          </ul>
        <% end %>
      </td>
      <td>
        <% @order.side_dishes.each do |side_dish| %>
          <ul class="list-unstyled">
            <li><%= side_dish.name %></li>
          </ul>
        <% end %>
      </td>
      <td>
        <ul class="list-unstyled">
          <li>Rua: <%= @order.address.street %></li>
          <li>Número: <%= @order.address.number %></li>
          <li>Referência: <%= @order.address.reference %></li>
        </ul>
      </td>
      <td><%= link_to 'Alterar pedido', edit_order_path(@order) if can? :update, @order %></td>
      <td><%= link_to 'Cancelar', order_path(@order), method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, @order %></td>
    </tr>
  </tbody>
</table>
